# .env.example
# Copia este archivo a .env y configura las variables según tu entorno

# API Backend URL
REACT_APP_API_URL=http://localhost:5000/api

# Socket.IO URL (generalmente el mismo servidor que la API)
REACT_APP_SOCKET_URL=http://localhost:5000

# Configuración de Google Maps (opcional)
REACT_APP_GOOGLE_MAPS_API_KEY=tu_api_key_aqui

# Configuración de Firebase para notificaciones push (opcional)
REACT_APP_FIREBASE_API_KEY=tu_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=tu_proyecto.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=tu_proyecto_id

# URL del sitio web (para SEO y compartir)
REACT_APP_SITE_URL=http://localhost:3000

# Entorno de desarrollo
REACT_APP_ENVIRONMENT=development

# Configuración de Sentry para monitoreo de errores (opcional)
REACT_APP_SENTRY_DSN=tu_sentry_dsn_aqui

# Feature flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_GEOLOCATION=true

# ---

# .env.development
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000
REACT_APP_ENVIRONMENT=development
REACT_APP_ENABLE_ANALYTICS=false

# ---

# .env.production
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000
REACT_APP_ENVIRONMENT=production
REACT_APP_ENABLE_ANALYTICS=true